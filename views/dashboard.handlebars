<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h3>Create a New Blog:</h3>
  </div>
  <div class="card-body">
    <form class="form new-blog-form" id="new-blog-form">
      <div class="form-group">
        <label for="blog-title">Blog Title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" />
      </div>
      <div class="form-group">
        <label for="blog-content">Content:</label>
        <textarea class="form-input" id="blog-content" name="blog-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn">Create</button>
      </div>
    </form>
  </div>
</div>

{{#if blogs.length}}
<div class="card blog-list">
  <div class="card-header">
    <h3>Your Current Blogs:</h3>
  </div>
  <div class="card-body">
    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
      </div>
      <a href="/dashboard/update/{{blog.id}}" class="update">Update Post</a>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/dashboard.js"></script>