<div class="card">
  <div class="card-header">
    <h5>Create a New Blog:</h5>
  </div>
  <div class="card-body">
    <form class="form new-blog-form" id="new-blog-form">
      <div class="form-group">
        <label for="blog-title">Blog Title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" />
      </div>
      <div class="form-group">
        <label for="blog-content">Content:</label>
        <textarea class="form-input" id="blog-content" name="blog-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn">Create</button>
      </div>
    </form>
  </div>
</div>

{{#if blogs.length}}
<div class="card blog-list">
  <div class="card-header">
    <h5>Your Current Blogs:</h5>
  </div>
  <div class="card-body">
    {{#each blogs as |blog|}}
      <h6><a href="/dashboard/update/{{blog.id}}" class="update">
        <div class="card-item">
          {{format_text blog.title}}
        </div>
      </a></h6>
    {{/each}}
  </div>
</div>
{{/if}}


<script src="/js/dashboard.js"></script>