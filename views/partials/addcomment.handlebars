<div class="add-comment card">
  <div class="card-header">
    <h5>Add a Comment:</h5>
  </div>
  <div class="card-body">
    <form class="form add-comment-form" id="add-comment-form">
      <div class="form-group">
        <label for="blog-comment">Comment:</label>
        <textarea class="form-input" id="blog-comment" name="blog-comment"></textarea>
      </div>
      <div class="add-comment">
        <button type="submit" class="btn" id="commentBtn" data-id="{{id}}">Add Comment</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/dashboard.js"></script>