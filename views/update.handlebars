<div class="row mt-4">
  <div class="col-md-6">
    <h3>Update your Blog Post:</h3>

    <form class="form update-blog-form" id="update-blog-form">
      <div class="form-group">
        <label for="blog-title">blog title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" value="{{title}}" />
      </div>
      <div class="form-group">
        <label for="blog-content">content:</label>
        <textarea class="form-input" id="blog-content" name="blog-content">{{content}}</textarea>
      </div>
      <div class="update-form-group">
        <button type="submit" class="btn btn-primary" id="updateBtn" data-id="{{id}}">Save Update</button>
        <button class="btn btn-sm btn-danger" id="deleteBtn" data-id="{{id}}">Delete Blog Post</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/dashboard.js"></script>